# Central Node Configuration
# Copy this file to central_config.env and modify as needed

# Network Configuration
CENTRAL_HOST=0.0.0.0
CENTRAL_PORT=5001

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=central_node.log

# Docker Configuration
DOCKER_SOCKET=unix://var/run/docker.sock
CONTAINER_NETWORK=serverless-network
DEFAULT_CONTAINER_IMAGE=serverless-handler:latest
DEFAULT_CONTAINER_MEMORY=256m

# Metrics Configuration
METRICS_COLLECTION_INTERVAL=10
METRICS_RETENTION_HOURS=24

# Scheduling Configuration
DEFAULT_SCHEDULING_ALGORITHM=round_robin
MIGRATION_THRESHOLD=0.8

# API Configuration
API_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# Database Configuration (if using persistence)
# DB_TYPE=sqlite
# DB_PATH=data/central_node.db

# Security Configuration (for production)
# API_KEY_REQUIRED=false
# JWT_SECRET_KEY=your-secret-key
# CORS_ORIGINS=*
