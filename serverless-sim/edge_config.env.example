# Edge Node Configuration
# Copy this file to edge_config.env and modify as needed

# Node Identification
NODE_ID=edge_001
NODE_TYPE=edge

# Network Configuration
EDGE_HOST=0.0.0.0
EDGE_PORT=auto  # Use 'auto' for auto-detection or specify a port number
CENTRAL_URL=http://192.168.1.100:5001

# Logging Configuration
LOG_LEVEL=INFO

# Docker Configuration
DOCKER_SOCKET=unix://var/run/docker.sock
CONTAINER_NETWORK=serverless-network
DEFAULT_CONTAINER_IMAGE=serverless-handler:latest
DEFAULT_CONTAINER_MEMORY=256m
MAX_CONTAINERS=10

# Metrics Configuration
METRICS_REPORTING_INTERVAL=10
AUTO_REGISTER=true
RETRY_CONNECTION_ATTEMPTS=3

# Container Management
IDLE_CONTAINER_TIMEOUT=300  # seconds
AUTO_CLEANUP_ENABLED=true
CONTAINER_MEMORY_LIMIT=256m
CONTAINER_CPU_LIMIT=1.0

# Performance Configuration
MAX_CONCURRENT_EXECUTIONS=5
EXECUTION_TIMEOUT=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEARTBEAT_INTERVAL=10

# Resource Limits
MAX_CPU_USAGE=0.9
MAX_MEMORY_USAGE=0.9
MIN_FREE_MEMORY=100  # MB

# Security Configuration (for production)
# API_KEY=your-api-key
# ENABLE_TLS=false
# CERT_FILE=cert.pem
# KEY_FILE=key.pem
